@model List<ProjectViewModel>

@using PortfolioApp.Core.Config
@using Microsoft.Extensions.Options
@inject IOptions<FileApiSettings> fileSettings

@{
    var fileApiUrl = fileSettings.Value.FileApiUrl;
}

<section id="portfolio" class="portfolio section light-background">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Projeler</h2>
        <span class="inline-span-text">Dahil olduğum veya kendim yürüttüğüm projelere göz atın.</span>
    </div><!-- End Section Title -->

    <div class="container">

        <div class="isotope-layout" data-default-filter="*" data-layout="masonry" data-sort="original-order">

            <div class="row gy-0 isotope-container" data-aos="fade-up" data-aos-delay="200">

                @foreach (var project in Model)
                {
                    <div class="col-lg-4 col-md-6 portfolio-item isotope-item filter-app mb-2">
                        <div class="portfolio-content h-100">
                            <img src="@($"{fileApiUrl}/{project.ImageUrl}")" class="img-fluid" alt="">
                            <div class="portfolio-info">
                                <h4>@project.Title</h4>
                                <p style="text-decoration:none;">@project.Description</p>
                            </div>
                            <!-- Büyüteç ikonunu ekledik -->
                            <a href="@($"{fileApiUrl}/{project.ImageUrl}")" title="@project.Title" data-gallery="portfolio-gallery-app" class="glightbox preview-link">
                                <i style="color:wheat;" class="bi bi-zoom-in"></i>
                            </a>
                        </div>
                    </div>

                }
            </div>

        </div>

    </div>

</section>

<style>
    .portfolio-content {
        position: relative; /* İçindeki elemanları konumlandırmak için relative */
    }

    .preview-link {
        position: absolute;
        top: 10px; /* Başlık ile aynı hizada yerleştirir */
        right: 10px; /* Sağ kenara hizalar */
        font-size: 2rem; /* İkon boyutunu ayarlayabilirsiniz */
        z-index: 10; /* İkonun diğer içeriklerin üstünde olmasını sağlar */
    }

</style>