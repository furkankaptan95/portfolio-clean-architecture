@model HomeViewModel

@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="container">
    <h1 class="text-center welcome-text mb-3">Hoşgeldiniz</h1>
    <p class="text-center info-text">Görüntülemek istediğiniz bilgileri veya yapmak istediğiniz değişiklikleri sol taraftaki menüden yönetebilirsiniz.</p>

    <div class="row mt-4">
        <div class="col-md-4 mb-4">
            <div class="card text-center mb-4 h-100">
                <div class="card-header">
                    Toplam Kullanıcı Sayısı
                </div>
                <div class="card-body">
                    <h2 class="card-title">@Model.UsersCount</h2>
                    <p class="card-text">Bu, sistemde kayıtlı toplam kullanıcı sayısını gösterir.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card text-center mb-4 h-100">
                <div class="card-header">
                    Toplam Blog Post Sayısı
                </div>
                <div class="card-body">
                    <h2 class="card-title">@Model.BlogPostsCount</h2>
                    <p class="card-text">Bu, sistemde yayınlanan toplam blog post sayısını gösterir.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card text-center mb-4 h-100">
                <div class="card-header">
                    Toplam Yorum Sayısı
                </div>
                <div class="card-body">
                    <h2 class="card-title">@Model.CommentsCount</h2>
                    <p class="card-text">Bu, sistemde yapılan toplam yorum sayısını gösterir.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card text-center mb-4 h-100">
                <div class="card-header">
                    Toplam Proje Sayısı
                </div>
                <div class="card-body">
                    <h2 class="card-title">@Model.ProjectsCount</h2>
                    <p class="card-text">Bu, sistemde oluşturulan toplam proje sayısını gösterir.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card text-center mb-4 h-100">
                <div class="card-header">
                    Toplam Eğitim Sayısı
                </div>
                <div class="card-body">
                    <h2 class="card-title">@Model.EducationsCount</h2>
                    <p class="card-text">Bu, sistemde mevcut toplam eğitim sayısını gösterir.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card text-center mb-4 h-100">
                <div class="card-header">
                    Toplam Deneyim Sayısı
                </div>
                <div class="card-body">
                    <h2 class="card-title">@Model.ExperiencesCount</h2>
                    <p class="card-text">Bu, sistemde kayıtlı toplam deneyim sayısını gösterir.</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .welcome-text {
            font-size: 1.8rem; /* Font büyüklüğünü ayarladık */
            font-weight: bold;
        }

        .info-text {
            font-size: 1.1rem; /* Bilgilendirme metni font büyüklüğü */
            font-weight: normal;
            background-color: #f8f9fa; /* Arka plan rengi */
            padding: 10px; /* İç boşluk */
            border-radius: 5px; /* Kenar yuvarlama */
            transition: background-color 0.3s; /* Geçiş efekti */
        }

            .info-text:hover {
                background-color: #e2e6ea; /* Hover arka plan rengi */
            }

        .card {
            transition: transform 0.2s;
        }

            .card:hover {
                transform: scale(1.05); /* Hover etkisi */
                background-color: #f8f9fa; /* Hover arka plan rengi */
            }
    </style>
}
